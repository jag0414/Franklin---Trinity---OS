# Franklin OS Environment Configuration

# Frontend Development Server
VITE_PORT=8080
VITE_HOST=localhost

# Backend API Configuration
# Note: The Python FastAPI backend runs on port 8000 by default
# If you need to connect to a different backend, update this URL
VITE_API_BASE_URL=http://localhost:8000

# AI Provider API Keys (optional - for AI features)
VITE_OPENAI_API_KEY=
VITE_ANTHROPIC_API_KEY=
VITE_GOOGLE_API_KEY=
VITE_STABILITY_API_KEY=

# Feature Flags
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_VOICE_ASSISTANT=false

# Backend Server Configuration (for Node.js backend if used)
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/franklin-trinity-os
DB_NAME=franklin-trinity-os

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=info
